        <script>
            var navHeight = $('Header').outerHeight();
            $('#viewPhotos').on('click', function () {
                $('html, body').animate({
                    scrollTop: $('#photosSection').offset().top-navHeight
                }, 500);
            })
            $('#viewDetails').on('click', function() {
                $('html, body').animate({
                    scrollTop: $('#detailsSection').offset().top-navHeight
                }, 500);
            });
            $('#viewTravelTalk').on('click', function() {
                $('html, body').animate({
                    scrollTop: $('#commentSection').offset().top-navHeight
                }, 500);
            });

            document.addEventListener("DOMContentLoaded", function() {
                let mapX = document.querySelector('.map__X').textContent;
                let mapY = document.querySelector('.map__Y').textContent;

                renderMap(mapX, mapY)

                const images = document.querySelectorAll('.article__img__box img.article__img__2');

                images.forEach((img, index) => {
                    if (index >= 3) {
                        img.style.display = 'none';  // 네 번째 이후 이미지는 숨기기
                    }
                });
            });

            // 지도 렌더링 함수
            function renderMap(mapX, mapY) {
                console.log(mapX);
                console.log(mapY);
                let container = document.getElementById("article__info__map");

                let options = {
                    center: new kakao.maps.LatLng(mapY, mapX), //지도의 중심좌표.
                    level: 3
                };
                let map = new kakao.maps.Map(container, options);

                // 마커가 표시될 위치입니다
                var markerPosition  = new kakao.maps.LatLng(mapY, mapX);

                // 마커를 생성합니다
                var marker = new kakao.maps.Marker({
                    position: markerPosition
                });

                // 마커가 지도 위에 표시되도록 설정합니다
                marker.setMap(map);
                // 지도가 보이지 않는 문제 해결을 위한 리사이즈 및 중심 좌표 재설정

            }


            //스크랩 버튼 클릭
            $(".scrap__btn").on("click", function(){
                let contentId = $(".scrap__btn").data("id");
                console.log(contentId);
                $.ajax({
                    url: `/api/scrapOnOff/${contentId}`,
                    type: 'post',
                    success: function (response) {
                        console.log("성공", response);
                        let result = response.body;
                        if(result =='on') {
                            alert("스크랩에 추가되었습니다.");
                        }
                        if(result =="off") {
                            alert("스크랩이 해제되었습니다.");
                        }
                    },
                    error: function (error) {
                        location.href="/login-form";
                    }

                });

            });


            async function review__write(){
                // contentId 가져오기
                const contentId = document.getElementById('contentId').value;
                // 댓글 입력란에서 값 가져오기
                const context = document.getElementById('review__context').value;
                // 선택한 평점 가져오기
                const rating = document.getElementById('review__rating').value;

                let formData = new FormData();  // 이 부분에서 formData 객체를 정의
                formData.append('contentId', contentId);
                formData.append('context', context);
                formData.append('rating', rating);

                console.log(formData);
                let response = await fetch(`/api/review/write`, {
                    method : "post",
                    body : formData
                });
                console.log(response)
                let result = response.status;
                if(result == 200) {
                    alert("댓글 작성이 완료되었습니다.");
                    window.location.reload();
                } else {
                    alert("오류 발생");
                }


            }
        </script>
